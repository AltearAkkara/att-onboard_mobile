<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:padding="16dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <LinearLayout
        android:padding="16dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/dialog_bg"
        >

        <LinearLayout
            android:id="@+id/payment_header_frame"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="8dp"
            android:gravity="center_horizontal"
            android:paddingBottom="8dp">


        <LinearLayout
            android:id="@+id/IconShow"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            >
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="16dp"
                android:id="@+id/IconPayment" />
            <TextView
                android:id="@+id/payment_title"
                android:text="@string/payment_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/TextDrawer.Widget.HomeStatusbar_Notification_Title"
                android:textSize="20sp" />
            </LinearLayout>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_marginTop="10dp"
                android:background="@color/light_gray"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="match_parent">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="0dip"
                android:layout_weight="3"
                android:layout_height="match_parent"
                android:id="@+id/linearLayout8"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"
                android:paddingBottom="8dp">

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    >

                    <TextView
                        android:text="@string/payment_desc_1"
                        android:layout_width="0dip"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.85"
                        style="@style/TextDrawer.Widget.Dialog_Payment"
                        android:textSize="15sp" />

                        <EditText
                            android:id="@+id/payment_desc_1"
                            android:numeric="decimal"
                            android:layout_width="0dip"
                            android:selectAllOnFocus="true"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.5"
                            android:singleLine="true"
                            style="@style/TextDrawer.Widget.Dialog_Payment"
                            android:textSize="15sp"
                            android:maxLength="5"
                            android:hint="0"
                            />
                        <TextView

                            android:text="นาที"
                            android:layout_width="0dip"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.4"
                            style="@style/TextDrawer.Widget.Dialog_Payment"
                            android:textSize="15sp" />

                    <TextView
                        android:layout_width="0dip"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.5"
                        style="@style/TextDrawer.Widget.Dialog_Payment"
                        android:textSize="15sp" />
                    <TextView
                        android:layout_width="0dip"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.2"
                        style="@style/TextDrawer.Widget.Dialog_Payment"
                        android:textSize="15sp" />
                </LinearLayout>

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical">

                    <TextView
                        android:text="@string/payment_desc_2"
                        android:layout_width="0dip"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.85"
                        style="@style/TextDrawer.Widget.Dialog_Payment"
                        android:textSize="15sp" />

                        <EditText
                            android:id="@+id/payment_desc_2"
                            android:numeric="decimal"
                            android:layout_width="0dip"
                            android:selectAllOnFocus="true"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.5"
                            android:singleLine="true"
                            style="@style/TextDrawer.Widget.Dialog_Payment"
                            android:textSize="15sp"
                            android:maxLength="5"
                            android:hint="0" />

                        <TextView
                            android:text="กม."
                            android:layout_width="0dip"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.4"
                            style="@style/TextDrawer.Widget.Dialog_Payment"
                            android:textSize="15sp" />

                    <TextView
                        android:layout_width="0dip"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.5"
                        style="@style/TextDrawer.Widget.Dialog_Payment"
                        android:textSize="15sp" />
                    <TextView
                        android:layout_width="0dip"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.2"
                        style="@style/TextDrawer.Widget.Dialog_Payment"
                        android:textSize="15sp" />

                </LinearLayout>

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="600dp"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:visibility="gone">

                    <TextView
                        android:paddingRight="10dp"
                        android:text="@string/payment_desc_5"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="left"
                        style="@style/TextDrawer.Widget.Dialog_Payment"
                        android:textSize="25dp" />

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        >

                        <EditText
                            android:paddingLeft="10dp"
                            android:id="@+id/payment_desc_5"
                            android:layout_width="100dp"
                            android:selectAllOnFocus="true"
                            android:layout_height="wrap_content"
                            android:gravity="left"
                            android:numeric="decimal"
                            android:singleLine="true"
                            style="@style/TextDrawer.Widget.Dialog_Payment"
                            android:maxLength="4"
                            android:textSize="25dp" />
                        <TextView
                            android:paddingRight="10dp"
                            android:text="@string/payment_desc_10"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="right"
                            style="@style/TextDrawer.Widget.Dialog_Payment"
                            android:layout_centerVertical="true"
                            android:layout_toEndOf="@+id/payment_desc_5"
                            android:textSize="25dp" />

                    </RelativeLayout>

                </LinearLayout>

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    >

                    <TextView
                        android:text="@string/payment_desc_6"
                        android:layout_width="0dip"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.85"
                        style="@style/TextDrawer.Widget.Dialog_Payment"
                        android:textSize="15sp"
                         />

                        <EditText
                            android:id="@+id/payment_desc_6"
                            android:layout_width="0dip"
                            android:layout_weight="0.5"
                            android:selectAllOnFocus="true"
                            android:layout_height="wrap_content"
                            android:singleLine="true"
                            android:numeric="decimal"
                            style="@style/TextDrawer.Widget.Dialog_Payment"
                            android:maxLength="4"
                            android:textSize="15sp" />
                        <TextView
                            android:text="@string/payment_desc_10"
                            android:layout_width="0dip"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.4"
                            style="@style/TextDrawer.Widget.Dialog_Payment"
                           android:textSize="15sp"
                            android:id="@+id/textView9" />

                        <TextView
                            android:layout_width="0dip"
                            android:layout_weight="0.5"
                            android:layout_height="wrap_content"
                            style="@style/TextDrawer.Widget.Dialog_Payment"
                            android:textSize="15sp"

                            android:id="@+id/dis_service" />

                        <TextView
                            android:layout_width="0dip"
                            android:layout_weight="0.2"
                            android:layout_height="wrap_content"
                            style="@style/TextDrawer.Widget.Dialog_Payment"
                            android:textSize="15sp"
                            android:id="@+id/unit1" />


                </LinearLayout>

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical">

                    <TextView
                        android:text="@string/payment_desc_3"
                        android:layout_width="0dip"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.85"
                        style="@style/TextDrawer.Widget.Dialog_Payment"
                        android:textSize="15sp" />

                        <EditText
                            android:id="@+id/payment_amount"
                            android:selectAllOnFocus="true"
                            android:layout_width="0dip"
                            android:layout_weight="0.5"
                            android:layout_height="wrap_content"
                            android:singleLine="true"
                            android:numeric="decimal"
                            style="@style/TextDrawer.Widget.Dialog_Payment"
                            android:textSize="15sp"
                            android:maxLength="5"
                            android:hint="0" />

                        <TextView
                            android:text="@string/payment_desc_10"
                            android:layout_width="0dip"
                            android:layout_weight="0.4"
                            android:layout_height="wrap_content"
                            style="@style/TextDrawer.Widget.Dialog_Payment"
                            android:textSize="15sp"
                            android:id="@+id/textView10" />

                        <TextView
                            android:layout_width="0dip"
                            android:layout_weight="0.5"
                            android:layout_height="wrap_content"
                            style="@style/TextDrawer.Widget.Dialog_Payment"
                            android:textSize="15sp"
                            android:id="@+id/dis_fare" />

                        <TextView
                            android:layout_width="0dip"
                            android:layout_weight="0.2"
                            android:layout_height="wrap_content"
                            style="@style/TextDrawer.Widget.Dialog_Payment"
                            android:textSize="15sp"
                            android:id="@+id/unit2" />



                </LinearLayout>

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical">

                    <TextView
                        android:text="@string/payment_desc_9"
                        android:layout_width="0dip"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.85"
                        style="@style/TextDrawer.Widget.Dialog_Payment"
                        android:textSize="15sp" />



                        <TextView
                            android:id="@+id/payment_total_cost"
                            android:layout_width="0dip"
                            android:layout_weight="0.5"
                            android:layout_height="wrap_content"
                            style="@style/TextDrawer.Widget.Dialog_Payment"
                            android:textSize="15sp" />

                        <TextView
                            android:text="@string/payment_desc_10"
                            android:layout_width="0dip"
                            android:layout_weight="0.4"
                            android:layout_height="wrap_content"
                            style="@style/TextDrawer.Widget.Dialog_Payment"
                            android:textSize="15sp"
                            android:id="@+id/textView11" />

                        <TextView
                            android:layout_width="0dip"
                            android:layout_weight="0.5"
                            android:layout_height="wrap_content"
                            style="@style/TextDrawer.Widget.Dialog_Payment"
                            android:textSize="15sp"
                            android:id="@+id/dis_total" />
                        <TextView
                            android:layout_width="0dip"
                            android:layout_weight="0.2"
                            android:layout_height="wrap_content"
                            style="@style/TextDrawer.Widget.Dialog_Payment"
                            android:textSize="15sp"
                            android:id="@+id/unit3" />


                </LinearLayout>

            </LinearLayout>
    <LinearLayout
        android:layout_width="0dip"
        android:layout_weight="1"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:layout_height="match_parent">
        <ImageView
            android:id="@+id/payment_btn_creditcard"
            android:src="@drawable/icon_carditcard"
            android:layout_width="wrap_content"
            android:layout_height="0dip"
            android:layout_weight="1"/>

        <ImageView
            android:layout_marginTop="16dp"
            android:id="@+id/payment_btn_money"
            android:layout_width="wrap_content"
            android:layout_height="0dip"
            android:layout_weight="1"
            android:src="@drawable/icon_cash" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dip"
            android:layout_weight="4"
            android:id="@+id/linearLayout9"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <Button
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:layout_marginTop="16dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/btn_blue"
                style="@style/TextDrawer.Widget.HomeStatusbar_BTN_Alert"
                android:text="คำนวณเงิน"
                android:id="@+id/button3"
                android:textSize="15sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:id="@+id/textView12"
                android:textSize="15sp"
                android:layout_marginTop="5dp" />
        </LinearLayout>


    </LinearLayout>

        </LinearLayout>



        <!--<RelativeLayout-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:layout_weight="1"-->
            <!--android:layout_above="@+id/linearLayout8"-->
            <!--android:layout_alignParentEnd="true"-->
            <!--android:id="@+id/relativeLayout4">-->

        <!--</RelativeLayout>-->


    </LinearLayout>
    <LinearLayout
        android:orientation="vertical"
        android:id="@+id/home_loading_frame"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:background="@color/black_transparent_200"
        android:visibility="gone"
        >

        <ProgressBar
            style="?android:attr/progressBarStyleLarge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />

        <TextView
            android:paddingTop="10dp"
            android:text="@string/loading_02"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_alignParentBottom="true"
            style="@style/TextDrawer.Widget.LoadingStyle"
            />

    </LinearLayout>
</RelativeLayout>